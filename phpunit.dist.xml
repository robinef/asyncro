        <const name="OAUTH_CLIENT_SECRET" value="" />
        <const name="OAUTH_VERSION_HEADER" value="" />
        <const name="TOKEN_GATEWAY" value="" />
        <const name="TEST_URL" value="" />
    </php>
    <testsuites>
        <testsuite name="Oauth async Test Suite">
            <directory>./tests/Asyncro/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/</directory>
        </whitelist>
    </filter>
